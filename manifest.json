{
  "manifest_version": 2,

  "name": "Linguist Unknown",
  "description": "Language Savant for unknown, lost or new programming languages on GitHub.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "./img/linguist-unknown-icon.png",
    "default_popup": "./src/views/popup.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/",
    "activeTab",
    "storage"
   ],
  "content_scripts": [
    {
      "matches": [
                  "http://www.github.com/*",
                  "https://www.github.com/*",
                  "http://github.com/*",
                  "https://github.com/*"],
      "css": ["./src/css/linguist_style.css"],
      "js": ["./src/scripts/highlighter.js", "./src/scripts/bar.js"],

      "run_at": "document_end"
    }
  ]
}
